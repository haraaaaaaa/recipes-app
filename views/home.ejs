<%- include("includes/head.ejs") %>
<link rel="stylesheet" href="/css/list.css">
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <div class="list">
    <h1 class="list__header">List of Recipes</h1>
    <% if (recipes.length === 0) { %>
     <h2 class="list__header">There Are No Recipes.</h1>
    <% } else { %>
        <ul class="list__list">
        <% for(const recipe of recipes) { %>
            <%- include("includes/recipe.ejs", {recipe}) %>
        <% } %>
        </ul>
    <% }%>
    </div>
</body>
</html>